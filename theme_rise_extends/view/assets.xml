<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="frontend_style"
                  name="Rise theme extend - less"
                  inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
				<!-- Common style -->
				<link
					href="/theme_rise_extends/static/src/less/common.less"
					type="text/less" rel="stylesheet" />
            </xpath>
        </template>

        <template id="backend_style"
                  name="Backend style"
                  inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet"
                      href="/theme_rise_extends/static/src/css/backend.css"/>
            </xpath>
        </template>


    </data>
</openerp>