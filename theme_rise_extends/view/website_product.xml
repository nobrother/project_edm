<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="product_show_description"
                  inherit_id="website_product_content_block_73lines.website_product_full_details"
                  name="Show Product Description">
			<xpath expr="//div[@id='pro-desc-full']"
                   position="replace">
                <div role="tabpanel" class="tab-pane active" id="pro-desc-full">
                    <div itemprop="description"
                         t-field="product.website_description"
                         class="oe_structure mt16"
                         id="product_full_description" />
                </div>
			</xpath>
		</template>



    </data>
</openerp>